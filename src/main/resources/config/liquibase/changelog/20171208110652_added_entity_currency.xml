<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>
    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <property name="jsonType" value="CLOB" dbms="h2"/>
    <property name="jsonType" value="TEXT" dbms="mysql"/>
    <!--
        Added the entity Currency.
    -->

    <changeSet id="20171208110652-1" author="ncalderon">
        <createTable tableName="currency">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_default" type="bit" defaultValue="0">
                <constraints nullable="false" />
            </column>
            <column name="code" type="varchar(64)">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false" />
            </column>
            <column name="jsonval" type="${jsonType}">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <!--<createTable tableName="user_detail">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="base_currency_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>-->

        <addColumn tableName="jhi_user">
            <column name="currency_id" type="bigint">
                <constraints nullable="true"></constraints>
            </column>
        </addColumn>

        <addColumn tableName="finance_account">
            <column name="currency_code" type="varchar(64)" defaultValue="DOP">
                <constraints nullable="false"></constraints>
            </column>
        </addColumn>

        <addColumn tableName="account_transaction">
            <column name="currency_value" type="decimal(10,2)" defaultValue="1.0">
                <constraints nullable="false"></constraints>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseColumnNames="currency_id"
                                 baseTableName="jhi_user"
                                 constraintName="fk_jhi_user_currency_id"
                                 referencedColumnNames="id"
                                 referencedTableName="currency"/>

        <loadData tableName="currency"
                  encoding="UTF-8"
                  separator="|"
                  file="config/liquibase/currencies.csv">
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_date" type="timestamp"/>
        </loadData>

        <update tableName="currency">
            <column name="is_default" type="bit" valueNumeric="1"></column>
            <where>name = 'DOP'</where>
        </update>

        <!--<update tableName="finance_account">
            <column name="currency_code" value="DOP"></column>
        </update>-->

        <sql
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">update JHI_USER set CURRENCY_ID = (select ID from CURRENCY where IS_DEFAULT = 1)
            <comment>Set default currency to all accounts</comment>
        </sql>

    </changeSet>
</databaseChangeLog>
